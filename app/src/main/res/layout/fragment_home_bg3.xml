<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/home_background_iv"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:src="@drawable/home_background3"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent "/>
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/home_btn_setting_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_main_setting"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent "/>
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/home_btn_ticket_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_main_ticket"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/home_btn_setting_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent "/>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/home_btn_nugu_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_nugu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/home_btn_ticket_iv"
        app:layout_constraintTop_toTopOf="parent " />

    <TextView
        android:id="@+id/home_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노래로 정리하는 이별 휴유증"
        android:textColor="#fff"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/home_btn_nugu_iv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/home_btn_play_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title_tv"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 20곡 2020.02.22"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/home_album_exp2_iv"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/home_album_exp2_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_background_img3"
        app:layout_constraintBottom_toBottomOf="@+id/home_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/home_album_exp2_text_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="이런 엔딩"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/home_album_exp2_text_02_tv"
        app:layout_constraintTop_toTopOf="@+id/home_album_exp2_iv"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp2_iv"/>
    <TextView
        android:id="@+id/home_album_exp2_text_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="아이유(IU)"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/home_album_exp2_text_01_tv"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp2_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_album_exp2_iv"/>



    <ImageView
        android:id="@+id/home_album_exp1_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_background_img4"
        app:layout_constraintBottom_toBottomOf="@+id/home_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/home_album_exp_text_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="오늘 헤어졌어요"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/home_album_exp_text_02_tv"
        app:layout_constraintTop_toTopOf="@+id/home_album_exp1_iv"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp1_iv"/>
    <TextView
        android:id="@+id/home_album_exp_text_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="윤하"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/home_album_exp_text_01_tv"
        app:layout_constraintStart_toEndOf="@+id/home_album_exp1_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_album_exp1_iv"/>



</androidx.constraintlayout.widget.ConstraintLayout>