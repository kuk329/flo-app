<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_album_songs_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="01"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_album_songs_title_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/textview_background_title"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="TITLE"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/item_album_songs_order"
        app:layout_constraintStart_toEndOf="@+id/item_album_songs_order"
        app:layout_constraintTop_toTopOf="@+id/item_album_songs_order" />

    <TextView
        android:id="@+id/item_album_songs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="라일락"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_album_songs_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="10dp"
        android:text="아이유(IU)"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_album_songs_order"/>

    <ImageView
        android:id="@+id/item_album_songs_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintBottom_toBottomOf="@+id/item_album_songs_more"
        app:layout_constraintEnd_toStartOf="@+id/item_album_songs_more"
        app:layout_constraintTop_toTopOf="@id/item_album_songs_more"/>
    <ImageView
        android:id="@+id/item_album_songs_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintBottom_toBottomOf="@id/item_album_songs_singer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_album_songs_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>